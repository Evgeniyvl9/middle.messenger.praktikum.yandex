<div class="login">
  <div class="login__container">
    <form class="login__form">
      <div class="login__form-container">
        <h1 class="login__title">Регистрация</h1>
        <div class="login__inputs">
          <label class="login__label" for="login-email">Почта</label>
          <input id="login-email" type="email" class="login__input" />

          <label class="login__label" for="login-id">Логин</label>
          <input id="login-id" type="text" class="login__input" />

          <label class="login__label" for="login-first-name">Имя</label>
          <input id="login-first-name" type="text" class="login__input" />

          <label class="login__label" for="login-last-name">Фамилия</label>
          <input id="login-last-name" type="text" class="login__input" />

          <label class="login__label" for="login-tel">Телефон</label>
          <input id="login-tel" type="tel" class="login__input" />

          <label class="login__label" for="login-password">Пароль</label>
          <input
            id="login-password"
            type="password"
            autocomplete="on"
            class="login__input"
          />
          <label class="login__label" for="login-password-check">Пароль (ещё
            раз)</label>
          <input
            id="login-password-check"
            type="password"
            autocomplete="off"
            class="login__input"
          />
        </div>
        <button class="login__btn">Зарегистрироваться</button>
        <div class="login__link">
          <a href="/login" class="login__link-signIn nav__link">Войти</a>
        </div>
      </div>
    </form>r
  </div>
</div>